{
  "name": "nimbleparse-lsp",
  "displayName": "nimbleparse lsp",
  "description": "lsp client for grmtools based on nimbleparse",
  "version": "0.0.1",
  "license": "(MIT OR Apache-2.0)",
  "repository": "https://github.com/ratmice/nimbleparse_lsp",
  "engines": {
    "vscode": "^1.65.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/nimbleparse.toml"
  ],
  "main": "./tsbuild/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "crimson",
        "extensions": [
          "crimson"
        ]
      }
    ],
    "commands": [
			{
				"command": "nimbleparse_lsp.statetable",
				"title": "Show parser state table"
			}
		]
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=tsbuild/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./",
    "package": "vsce package -o nimbleparse_lsp.vsix",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./tsbuild/test/runTest.js"
  },
  "dependencies": {
    "vscode-languageclient": "^7.0.0"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.65.0",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "@vscode/test-electron": "^2.1.2",
    "esbuild": "^0.14.27",
    "eslint": "^8.9.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.1",
    "typescript": "^4.5.5"
  }
}
